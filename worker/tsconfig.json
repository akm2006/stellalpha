{
    "compilerOptions": {
        "target": "ES2022",
        "module": "esnext",
        "moduleResolution": "bundler",
        "composite": true,
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@solana/web3.js": [
                "node_modules/@solana/web3.js"
            ],
            "@solana/kit": [
                "node_modules/@solana/kit"
            ]
        }
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}